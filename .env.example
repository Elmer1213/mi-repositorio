# ============================================================
#  Base de datos MySQL
# ============================================================

# Contraseña del usuario root de MySQL (solo para entorno local)
MYSQL_ROOT_PASSWORD=root_password_secure

# Nombre de la base de datos
MYSQL_DATABASE=sena_usuarios

# Usuario con permisos sobre la base de datos
MYSQL_USER=sena_user

# Contraseña del usuario
MYSQL_PASSWORD=sena_password_secure

# URL de conexión usada por FastAPI y SQLAlchemy
# Formato: mysql+pymysql://usuario:contraseña@host:puerto/base_de_datos
DATABASE_URL=mysql+pymysql://sena_user:sena_password_secure@db:3306/sena_usuarios


# ============================================================
# Configuración de la aplicación FastAPI
# ============================================================

# Entorno: development | production
ENVIRONMENT=development

# Puerto donde se ejecutará la app
APP_PORT=8000

# Clave secreta para autenticación (cambia en producción)
SECRET_KEY=your-secret-key-here-change-in-production

# Nivel de logs: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO


# ============================================================
# Configuración del frontend (Angular u otro)
# ============================================================

# URL del backend FastAPI (desde el contenedor frontend)
NG_APP_API_URL=http://fastapi_app:8000

# Modo de compilación de Angular
NODE_ENV=development
CHOKIDAR_USEPOLLING=true
